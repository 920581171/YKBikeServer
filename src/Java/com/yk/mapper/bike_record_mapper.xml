<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yk.dao.BikeRecordDao">

    <resultMap type="com.yk.pojo.BikeRecord" id="resultMap">
        <!-- 用id属性来映射主键字段 -->
        <id property="id" column="_id"/>
        <!-- 用result属性来映射非主键字段 -->
        <result property="orderId" column="order_id"/>
        <result property="userId" column="user_id"/>
        <result property="bikeId" column="bike_id"/>
        <result property="charge" column="charge"/>
        <result property="mileage" column="mileage"/>
        <result property="createTime" column="create_time"/>
        <result property="endTime" column="end_time"/>
    </resultMap>

    <parameterMap id="parameterMap" type="com.yk.pojo.BikeRecord">
        <parameter property="orderId" resultMap="resultMap"/>
        <parameter property="userId" resultMap="resultMap"/>
        <parameter property="bikeId" resultMap="resultMap"/>
        <parameter property="charge" resultMap="resultMap"/>
        <parameter property="mileage" resultMap="resultMap"/>
        <parameter property="createTime" resultMap="resultMap"/>
        <parameter property="endTime" resultMap="resultMap"/>
    </parameterMap>

    <select id="selectOne" resultMap="resultMap">
        select *
        from bike_record
        where ${column} = #{property}
    </select>

    <select id="selectList" resultMap="resultMap">
        select *
        from bike_record
        where ${column} = #{property}
    </select>

    <select id="selectTable" resultMap="resultMap">
        select *
        from bike_record
    </select>

    <insert id="insert" parameterMap="parameterMap">
        <selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">
            SELECT LAST_INSERT_ID()
        </selectKey>
        insert into
        bike_record(`_id`,order_id,user_id,bike_id,charge,mileage,create_time,end_time)
        values
        (null,#{orderId},#{userId},#{bikeId},#{charge},#{mileage},#{createTime},#{endTime})
    </insert>

    <update id="update" parameterMap="parameterMap">
        update
            bike_record
        set
            user_id     = #{userId},
            bike_id     = #{bikeId},
            charge      = #{charge},
            mileage     = #{mileage},
            create_time = #{createTime},
            end_time    = #{endTime}
        where
            order_id = #{orderId}
    </update>

    <delete id="delete" parameterMap="parameterMap">
        delete from bike_record
        where order_id = #{orderId}
    </delete>
</mapper>